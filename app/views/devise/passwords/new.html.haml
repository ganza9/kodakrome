.registration-bg
  .container-fluid
    .row
      .col-md-4.col-md-offset-4
        .log-in.panel
          .panel-heading
            %h2 Forgot your password?
            = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
              = f.error_notification
              .panel-body
                .form-inputs
                  = f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email', input_html: { class:'input-lg form-control' }
                  %br
                .form-actions
                  = f.button :submit, "Send me reset password instructions", class: 'btn-lg btn-info btn-block'
              = render "devise/shared/links"
