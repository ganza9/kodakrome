.registration-bg
  .container-fluid
    .row
      .col-md-4.col-md-offset-4
        .log-in.panel
          .panel-heading
            %h2 Change your password
            = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
              = f.error_notification
              = f.input :reset_password_token, as: :hidden
              = f.full_error :reset_password_token
              .form-inputs
                = f.input :password, label: "New password", required: true, autofocus: true, label: false, placeholder: 'Email', input_html: { class:'input-lg form-control' }, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
                %br
                = f.input :password_confirmation, label: "Confirm your new password", required: true, label: false, placeholder: 'Email', input_html: { class:'input-lg form-control' }
              .form-actions
                = f.button :submit, "Change my password", class: 'btn-lg btn-info btn-block'
            = render "devise/shared/links"
